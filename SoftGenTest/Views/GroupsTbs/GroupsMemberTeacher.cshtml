@model IEnumerable<SoftGenTest.Repository.Models.TeacherTbGroupTb>

@{
    ViewData["Title"] = "Index";
}

<h1>Teachers in Group</h1>

<p>
    <a asp-action="AddNewTeacherInGroup">Add New Teacher</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.GroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.Name)
                </td>
                <td>
                    <a asp-action="DeleteTeacherFromGroup" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
